datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // define en .env
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int     @id @default(autoincrement())
  externalUid String  @unique
  email       String  @unique
  displayName String
  rowStatus   String  @default("A")
}

}
